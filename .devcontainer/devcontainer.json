// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/go
{
	"name": "Go",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/go:dev-1.24-bookworm",
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "go version",
	// Configure tool-specific properties.
	// "customizations": {},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	//
	//
	"runArgs": [
		// need fuse for sshfs
		"--privileged"
	],
	// rootless podman devcontainer runs as root
	"remoteUser": "root",
	// DLS specific Kubectl mount with pollux config
	"mounts": [
		"source=/dls_sw/apps/kubernetes/kubectl/1.31.6/kubectl,target=/usr/bin/kubectl,type=bind",
		"source=/dls_sw/apps/kubernetes/kubelogin/1.29.0/kubectl-oidc_login,target=/usr/bin/kubectl-oidc_login,type=bind",
		"source=/dls_sw/apps/kubernetes/pollux/kubectl_config.conf,target=/root/.kube/config,type=bind",
		"source=/dls_sw/apps/kubernetes/pollux/ca.crt,target=/dls_sw/apps/kubernetes/pollux/ca.crt,type=bind"
	]
}